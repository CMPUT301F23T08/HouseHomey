<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:elevation="4dp"
        android:background="@drawable/rounded_background">


        <CheckBox
            android:id="@+id/item_checkBox"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:background="@color/offWhite"/>

            <LinearLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_checkBox"
                android:layout_toStartOf="@id/right_text_layout"
                android:orientation="vertical"
                android:background="@color/offWhite"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/item_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:text="Brief Description"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_make_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="16sp"
                        android:text="make"
                        android:gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/item_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="Tag"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:textStyle="bold"
                        android:paddingHorizontal="14dp"
                        android:visibility="gone"
                        android:background="@drawable/rounded_border"/>
                    <TextView
                        android:id="@+id/item_extra_tags_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="14sp"
                        android:textColor="@color/darkGrey"
                        android:text="+5"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:orientation="vertical"
                android:background="@color/offWhite">

                <TextView
                    android:id="@+id/item_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingTop="8dp"
                    android:text="yyyy-mm-dd"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/item_cost_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textAlignment="textEnd"
                    android:paddingTop="8dp"
                    android:text="$xx.xx"
                    android:textColor="#4CAF50"
                    android:textSize="16sp" />
            </LinearLayout>
    </RelativeLayout>
</LinearLayout>